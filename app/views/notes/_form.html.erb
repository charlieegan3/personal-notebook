<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Note', value: note.field_value %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content, cols: 60, rows: 20 %>
  </div>

  <%= f.hidden_field :section_id, value: note.section.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
