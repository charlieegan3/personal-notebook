<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, note, class: :data %></td>
        <td><%= distance_of_time_in_words(note.created_at, Time.zone.now) %></td>
        <td>
          <%= link_to 'Edit', edit_note_path(note), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
